  %body

    %h1 Events#index
    %p #{@visits}
    / %p #{@ips}
    / %p #{@emails}
    / %p #{@emails}


    / %p #{@events.count}
    / %p #{@clicks.count}

    / %svg.chart
    
    %script{:charset => "utf-8", :src => "http://d3js.org/d3.v3.min.js"}
    :javascript
      var dataset = #{ raw @visits.to_json };
      var datalabels = #{ raw @ips.to_json };
      var w = 800; 
      var h = 100; 
      barPadding = 1;

      var axisScale = d3.scale.linear()
                            .domain([0, w])
                            .range([0, h]);

      var svg = d3.select("body")
                  .append("svg")
                  .attr("width", w)
                  .attr("height", h);

      var xAxis = d3.svg.axis().scale(axisScale);

      svg.selectAll("rect")
          .data(dataset)
          .enter()
          .append("rect")
          .attr("x", function(d, i) {
              return i * (w / dataset.length); 
          })
          .attr("y", function(d) {
            return h - 5 * d;
          })
          .attr("width", w / dataset.length - barPadding)
          .attr("height", function(d) {
              return 5 * d;
          })
          .attr("fill", "green");
      
      svg.append("text")
        .data(datalabels)
        .enter()
        .append("text")
        .text(function(d) {
            return d;
        });
